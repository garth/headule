{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "noEmit": true,
    "skipLibCheck": false,
    "strict": true,
    "target": "es2022"
  },
  "include": ["prisma/*.ts", "src/**/*", "scripts/**/*"]
}
